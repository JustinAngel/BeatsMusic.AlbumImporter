<Window x:Class="BeatsMusic.Importer.ITunesImport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        >
    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="163*"/>
    		<RowDefinition Height="341*"/>
    	</Grid.RowDefinitions>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="*"/>
    		<ColumnDefinition Width="310"/>
    		<ColumnDefinition Width="*"/>
    	</Grid.ColumnDefinitions>
    	<TextBlock HorizontalAlignment="Left" Height="54" TextWrapping="Wrap" Text="Gathering albums..." VerticalAlignment="Top" Width="310" FontSize="34.667" Margin="10,67,0,0" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"/>
    	<ProgressBar HorizontalAlignment="Left" Height="30" Margin="10,126,0,0" VerticalAlignment="Top" Width="290" IsIndeterminate="True" Grid.Column="1" Grid.Row="1"/>
    	<Image Grid.Column="1" Margin="10,56,29,10" Source="Resources/ItunesLogo.png"/>
        
    </Grid>
</Window>
